<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0" prefWidth="320.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="edu.virginia.cs.hwseven.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox>
        <Region prefHeight="195.0"/>
        <Label fx:id="welcomeText" text="Create Account" style="-fx-font-weight: bold; -fx-font-size: 36px; -fx-font-family: Arial;" />
        <Region prefHeight="10.0"/>
        <Label fx:id="signInText" text="Please create an account to continue" style="-fx-font-size: 16px; -fx-text-fill: grey; -fx-font-family: Arial;" />
        <Region prefHeight="10.0"/>
        <VBox style="-fx-alignment: center;">
            <Label fx:id="createAccountError" text="errorText" style="-fx-font-size: 12px; -fx-text-fill: transparent; -fx-font-family: Arial;" />
            <Region prefHeight="10.0"/>
            <TextField promptText="EMAIL" prefHeight="50.0" prefWidth="100.0" style="-fx-font-size: 20px; -fx-background-radius: 10px; -fx-background-color: white; -fx-border-color: grey; -fx-border-radius: 10px;"/>
            <Region prefHeight="10.0"/>
            <TextField fx:id="createpassword1" promptText="PASSWORD" prefHeight="50.0" prefWidth="100.0" style="-fx-font-size: 20px; -fx-background-radius: 10px; -fx-background-color: white; -fx-border-color: grey; -fx-border-radius: 10px;"/>
            <Region prefHeight="10.0"/>
            <TextField fx:id="createpassword2" promptText="CONFIRM PASSWORD" prefHeight="50.0" prefWidth="100.0" style="-fx-font-size: 20px; -fx-background-radius: 10px; -fx-background-color: white; -fx-border-color: grey; -fx-border-radius: 10px;"/>
        </VBox>
        <Region prefHeight="20.0"/>
        <VBox style="-fx-alignment: center-right;">
            <Button text="SIGN UP" onAction="#createAccount" prefHeight="50.0" prefWidth="120.0" style="-fx-font-size: 20px; -fx-background-radius: 50px; -fx-padding: 10px 20px; -fx-background-color: cornflowerblue; -fx-text-fill: white;"/>
        </VBox>
        <Region prefHeight="140.0"/>
        <HBox alignment="CENTER">
            <VBox style="-fx-alignment: bottom-center;">
                <HBox>
                    <Label text="Already have an account?" style="-fx-font-size: 20px; -fx-text-fill: grey;"/>
                    <Button text=" Sign in!" onAction="#switchTologin" style="-fx-font-size: 20px; -fx-text-fill: cornflowerblue; -fx-background-color: transparent; -fx-padding: 0; -fx-border-color: transparent;"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>